<?link rel="stylesheet" type="text/css" href="/style.css"?>

<zk>
   <window border="normal" hflex="1" vflex="1"
      contentStyle="overflow:auto"
      apply="org.ufba.dcc.mata60.controller.ExcluirProfessor">

      <vlayout hflex="1" sclass="pos20left">
         <grid width="700px">
            <columns>
               <column align="right" hflex="min" />
               <column />
            </columns>
            <rows>
               <row>
                  <cell sclass="row-title">
                     Informe matricula do professor:
                  </cell>
                  <cell>
                     <combobox autodrop="true"
                        buttonVisible="false" width="430px" id="cbx_professor">
                     </combobox>
                  </cell>
               </row>
               </rows>
         </grid>

         <grid width="700px">
            <rows>
               <row>
                  <listbox id="listar_professor">

                  </listbox>
               </row>
            </rows>
         </grid>

         <hlayout>
            <button id="btn_excluir" label="excluir" />
         </hlayout>
      </vlayout>
   </window>

</zk>